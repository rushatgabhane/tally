rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Any authenticated user can read all user data (to see partner progress)
      allow read: if request.auth != null;

      // Users can only write their own data
      allow write: if request.auth != null &&
        ((request.auth.token.email == 'rushatgabhane@gmail.com' && userId == 'user1') ||
         (request.auth.token.email == 'hiralgabhane@gmail.com' && userId == 'user2'));
    }
  }
}
